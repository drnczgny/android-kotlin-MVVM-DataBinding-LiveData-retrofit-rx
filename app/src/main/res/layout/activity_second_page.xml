<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.secondpage.view.SecondPageActivity">

    <data>

        <variable
            name="viewModel"
            type="com.adrian.project.ui.secondpage.viewmodel.SecondPageViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textSize="20sp"
            android:text="Two way binding with LiveData..." />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Type into this gray layout something:" />

        <EditText
            android:id="@+id/etText"
            android:layout_width="250dp"
            android:layout_height="30dp"
            android:background="@color/cardview_shadow_start_color"
            android:text="@={viewModel.editText}"/>

        <TextView
            android:id="@+id/tvText"
            android:layout_width="250dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:layout_marginTop="20dp"
            android:background="@color/cardview_shadow_start_color"
            android:text="@{viewModel.text}" />
    </LinearLayout>
</layout>